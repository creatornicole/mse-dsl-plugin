package org.xtext.example.mydsl.ui.labeling;

import com.google.inject.Inject;
import org.eclipse.emf.edit.ui.provider.AdapterFactoryLabelProvider;
import org.eclipse.xtext.ui.label.DefaultEObjectLabelProvider;
import org.xtext.example.mydsl.myDsl.Nutzen;
import org.xtext.example.mydsl.myDsl.Rolle;
import org.xtext.example.mydsl.myDsl.Titel;
import org.xtext.example.mydsl.myDsl.UserStory;
import org.xtext.example.mydsl.myDsl.Ziel;

/**
 * Provides labels for EObjects.
 * 
 * See https://www.eclipse.org/Xtext/documentation/310_eclipse_support.html#label-provider
 */
public class MyDslLabelProvider extends DefaultEObjectLabelProvider {

	@Inject
	public MyDslLabelProvider(AdapterFactoryLabelProvider delegate) {
		super(delegate);
	}

	// Labels and icons can be computed like this:
	
	String text(UserStory ele) {
		return "UserStory: " + ele;
	}
	
	String text(Titel ele) {
		return "Titel: " + ele.getSubjekt();
	}
	
	String text(Rolle ele) {
		return "Rolle: " + ele.getSubjekt();
	}
	
	String text(Ziel ele) {
		return ele.getLchars() == null
				? "Ziel: " + " " + ele.getSubjekt() + " " + ele.getVerb()
				: "Ziel: " + " " + ele.getLchars() + " " + ele.getSubjekt() + " " + ele.getVerb();
	}
	
	String text(Nutzen ele) {
		return "Nutzen: " + ele.getSubjekt() + ele.getVerb();
	}
	
//	String text(Greeting ele) {
//		return "A greeting to " + ele.getName();
//	}
//
//	String image(Greeting ele) {
//		return "Greeting.gif";
//	}
}
